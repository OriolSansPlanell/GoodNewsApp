# Server Configuration
PORT=3000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/goodnews
# Or use MongoDB Atlas free tier:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/goodnews

# News API Keys (Free Tier)
NEWSAPI_KEY=your_newsapi_key_here
GUARDIAN_API_KEY=your_guardian_api_key_here

# News Source Configuration
# Which adapter to use: newsapi | guardian | rss | multi
NEWS_ADAPTER=multi

# Positivity Analyzer Configuration
# Which analyzer to use: sentiment | premium
POSITIVITY_ANALYZER=sentiment

# Premium Services (for future upgrade)
# OPENAI_API_KEY=your_openai_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# NEWSAPI_PREMIUM_KEY=your_premium_key_here

# Cache Configuration
CACHE_TTL=3600
NEWS_REFRESH_INTERVAL=3600000

# Minimum positivity score to include articles
MIN_POSITIVITY_SCORE=40
